<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    {{#with course}}
    <form method="POST" action="/courses/{{_id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" name="name" id="name" value="{{name}}">
        </div>
        <div class="mb-3">
            <label for="description" class="fortm-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input type="text" class="form-control" name="videoId" id="videoId" value="{{videoId}}">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Mức độ</label>
            <input type="text" class="form-control" name="level" id="level" value="{{level}}">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
    {{/with}}
</div>